<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        layout="@layout/top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/img_btn_start_quiz"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="#fff"
        android:src="@drawable/ic_baseline_play_circle_filled_110"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/img_btn_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="40dp"
        android:background="#fff"
        android:src="@drawable/ic_baseline_account_circle_90"
        app:layout_constraintBottom_toTopOf="@id/img_btn_start_quiz"
        app:layout_constraintEnd_toEndOf="@id/img_btn_start_quiz"
        app:layout_constraintStart_toStartOf="@id/img_btn_start_quiz"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="پروفایل"
        android:textColor="@color/purple_700"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/img_btn_1"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/img_btn_1"
        app:layout_constraintTop_toBottomOf="@+id/img_btn_1" />

    <ImageButton
        android:id="@+id/img_btn_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:background="#fff"
        android:src="@drawable/ic_baseline_account_circle_90"
        app:layout_constraintTop_toTopOf="@id/img_btn_start_quiz"
        app:layout_constraintBottom_toBottomOf="@id/img_btn_start_quiz"
        app:layout_constraintStart_toEndOf="@id/img_btn_start_quiz"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تنظیمات"
        android:textColor="@color/purple_700"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/img_btn_2"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/img_btn_2"
        app:layout_constraintTop_toBottomOf="@+id/img_btn_2" />

    <ImageButton
        android:id="@+id/img_btn_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:background="#fff"
        android:src="@drawable/ic_baseline_account_circle_90"
        app:layout_constraintTop_toBottomOf="@id/img_btn_start_quiz"
        app:layout_constraintEnd_toEndOf="@id/img_btn_start_quiz"
        app:layout_constraintStart_toStartOf="@id/img_btn_start_quiz"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="آزمون ها"
        android:textColor="@color/purple_700"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/img_btn_3"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/img_btn_3"
        app:layout_constraintTop_toBottomOf="@+id/img_btn_3" />
    <ImageButton
        android:id="@+id/img_btn_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="40dp"
        android:background="#fff"
        android:src="@drawable/ic_baseline_account_circle_90"
        app:layout_constraintTop_toTopOf="@id/img_btn_start_quiz"
        app:layout_constraintBottom_toBottomOf="@id/img_btn_start_quiz"
        app:layout_constraintEnd_toStartOf="@id/img_btn_start_quiz"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مشارکت"
        android:textColor="@color/purple_700"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/img_btn_4"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/img_btn_4"
        app:layout_constraintTop_toBottomOf="@+id/img_btn_4" />




</androidx.constraintlayout.widget.ConstraintLayout>