<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AnswerFragment"
    android:paddingTop="20dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_question"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="@string/dummy_question"
        android:background="@drawable/solid_round_white_rectangle"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:textSize="19sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/answer_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="گزینه یک"
            android:padding="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/solid_round_white_rectangle"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="گزینه دو"
            android:padding="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/solid_round_white_rectangle"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="گزینه سه"
            android:padding="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/solid_round_white_rectangle"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="گزینه چهار"
            android:padding="15dp"
            android:background="@drawable/solid_round_white_rectangle"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>