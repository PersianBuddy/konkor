<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="15dp"
    android:background="@drawable/solid_round_white_rectangle">
    <TextView
        android:id="@+id/txt_question_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سوال شماره یک"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/img_answer_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_green_check"/>
    <TextView
        android:id="@+id/txt_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txt_question_number"
        app:layout_constraintStart_toStartOf="@id/txt_question_number"
        android:text="این یک نمونه سوال می‌باشد این یک نمونه سوال می‌باشد.این یک نمونه سوال می‌باشد "/>
    <TextView
        android:id="@+id/txt_user_answer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="جواب شما"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txt_question"
        app:layout_constraintStart_toStartOf="@id/txt_question"/>
    <TextView
        android:id="@+id/txt_user_answer_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="گزینه دو"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@id/txt_user_answer_title"
        app:layout_constraintBottom_toBottomOf="@id/txt_user_answer_title"
        app:layout_constraintStart_toEndOf="@id/txt_user_answer_title"/>
    <TextView
        android:id="@+id/txt_correct_answer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="جواب صحیح"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txt_user_answer_title"
        app:layout_constraintStart_toStartOf="@id/txt_user_answer_title"/>
    <TextView
        android:id="@+id/txt_correct_answer_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="گزینه دو"
        android:textColor="@color/green"
        app:layout_constraintTop_toTopOf="@id/txt_correct_answer_title"
        app:layout_constraintBottom_toBottomOf="@id/txt_correct_answer_title"
        app:layout_constraintStart_toStartOf="@id/txt_user_answer_value"/>


</androidx.constraintlayout.widget.ConstraintLayout>