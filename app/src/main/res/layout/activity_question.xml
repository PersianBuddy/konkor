<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuestionActivity">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/question_number_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp">

        </androidx.recyclerview.widget.RecyclerView>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="140dp"
        app:layout_constraintTop_toBottomOf="@id/question_number_list"
        app:layout_constraintEnd_toEndOf="@+id/question_number_list"
        app:layout_constraintStart_toStartOf="@+id/question_number_list">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="این یک نمونه سوال می باشد این یک نمونه سوال می باشد این یک نمونه سوال می باشد؟"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_layout">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_option_1"
                android:paddingStart="50dp"
                android:text="گزینه یک"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton">

            </Button>

            <TextView
                android:id="@+id/txt_option_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:padding="2dp"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/circle_shape"
                app:layout_constraintBottom_toBottomOf="@+id/btn_option_1"
                app:layout_constraintStart_toStartOf="@+id/btn_option_1"
                app:layout_constraintTop_toTopOf="@+id/btn_option_1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_option_2"
                android:paddingStart="50dp"
                android:text="گزینه یک"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton">

            </Button>

            <TextView
                android:id="@+id/txt_option_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:padding="2dp"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/circle_shape"
                app:layout_constraintBottom_toBottomOf="@+id/btn_option_2"
                app:layout_constraintStart_toStartOf="@+id/btn_option_2"
                app:layout_constraintTop_toTopOf="@+id/btn_option_2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_option_3"
                android:paddingStart="50dp"
                android:text="گزینه یک"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton">

            </Button>

            <TextView
                android:id="@+id/txt_option_number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:padding="2dp"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/circle_shape"
                app:layout_constraintBottom_toBottomOf="@+id/btn_option_3"
                app:layout_constraintStart_toStartOf="@+id/btn_option_3"
                app:layout_constraintTop_toTopOf="@+id/btn_option_3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_option_4"
                android:paddingStart="50dp"
                android:text="گزینه یک"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton">

            </Button>

            <TextView
                android:id="@+id/txt_option_number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:padding="2dp"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/circle_shape"
                app:layout_constraintBottom_toBottomOf="@+id/btn_option_4"
                app:layout_constraintStart_toStartOf="@+id/btn_option_4"
                app:layout_constraintTop_toTopOf="@+id/btn_option_4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ثبت پاسخ"
            android:layout_marginTop="20dp"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>